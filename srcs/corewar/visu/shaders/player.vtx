#version 410 core

layout(location = 0) in vec3 vertexpos;
layout(location = 1) in vec3 inst;

uniform mainBlock
{
	mat4 projView;
	vec2 res;
	float ratio;
	float time;
	float intro;
	float bass;
}u;

void	main()
{
	float scale = 0.9 - 1.0 * u.bass;
	vec3 inst_fft = vec3(inst.xy * (1 + u.bass * 0.5), inst.z);

	gl_Position = u.projView *
	vec4(vertexpos.xy * scale * max(0., u.intro * 2. - 1.) + inst_fft.xy,
									vertexpos.z + inst_fft.z, 1.);
}
