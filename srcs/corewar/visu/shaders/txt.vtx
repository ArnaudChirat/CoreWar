#version 410 core

layout(location = 0) in vec3 vertexpos;
out vec4 vtxColor;

uniform vec3 world_pos;

uniform mainBlock
{
	mat4 projView;
	vec2 res;
	float ratio;
	float time;
	float intro;
	float bass;
	float speed;
}u;

void	main()
{
	float scale = 6.;

	gl_Position = u.projView * vec4((vertexpos * scale + world_pos), 1.);
	vtxColor = vec4(-vertexpos.z * 8., -vertexpos.z * 8., -vertexpos.z * 8., 1.0);
}
