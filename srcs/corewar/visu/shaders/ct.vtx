#version 410 core

layout(location = 0) in vec3 vertexpos;
layout(location = 1) in vec3 inst;
out vec4 vtxColor;

uniform mainBlock
{
	mat4 projView;
	vec2 res;
	float ratio;
	float time;
	float intro;
}u;

void	main()
{
	float mytime = u.time;

	vec3 pos = vertexpos + inst;
	gl_Position = u.projView * vec4(pos, 1.);
	vtxColor = vec4(0.0, 1.0, 0.0, 1.0);
}
